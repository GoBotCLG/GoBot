@section Scripts {
    <script>
        var levels;

        $(function () {
            $(".info > div > a").each(function () {
                $(this).parent().css("float", "right");
            });
            $(".info > div > :not(a)").each(function () {
                $(this).parent().css("padding", "0 15px");
            });

            onResize();
            posRepBar(true);
            levels = @Model.Level;
        });

        $(window).on('load', function() {
            animateRanks(1);
        });

        $(window).resize(function () {
            onResize();
            posRepBar(false);
        });

        $(document).on("click", "#options > div", function() {
            $("#options > div").not($(this)).each(function() {
                if ($(this).is(":visible"))
                    $(this).hide();
                else
                    $(this).show();
            });

            if ($("#optionForm").length == 0)
                showForm($(this).attr("id"));
            else {
                $("#optionForm").remove();
                $("#optionSubmit").remove();
            }
        });

        $(document).on("click", "#optionSubmit:first-child", function() {
            // SUBMIT FORM INFORMATION
        });

        $(document).on("click", "#optionSubmit:last-child", function() {
            $("#options > form").remove();
            $("#options > div").show();
        });

        $(document).on("click", "#userOptions", function() {
            if ($("#options").length == 0) {
                $('<div class="info" id="options"></div>').insertAfter("#accountInfo");
                $("#options").append('<div id="changeEmail"><img src="/Images/mail.png"><h2>Modifier mon adresse courriel</h2></div>');
                $("#options").append('<div id="changeImg"><img src="/Images/user.png"><h2 >Modifier ma photo de profil</h2></div>');
                $("#options").append('<div id="changePwd"><img src="/Images/lock.png"><h2>Modifier mon mot de passe</h2></div>');

                $("#userOptions > h3, #openOption").hide();
                $("#closeOption").show();

                posOptionTabs();
                onResize();
            }
            else {
                $("#options").remove();
                $("#userOptions > h3, #openOption").show();
                $("#closeOption").hide();
            }
        });

        $(document).on("focus", "form input", function () {
            $(this).prev().css("color", "#f16651");
        }).on("blur", "form input", function () {
            $(this).prev().css("color", "#eee");
        });

        $(document).on("click", "#UploadButton", function() {
            $("#ImageUploader").trigger("click");
        });
        
        $(document).on("change", "#ImageUploader", function(){
            readURL(this);
        });

        function onResize() {
            h_align_window($(".info"));

            $(".info > div:not(:first-of-type)").each(function () {
                if ($(this).children().children().length > 0 && $(this).children().height() == $(this).height())
                    v_align($(this).children().children(), $(this), getHeightOfChilds($(this).children()));
                else
                    v_align($(this).children(), $(this), getHeightOfChilds($(this)))
            });

            $(".info:not(#accountInfo) > div").has("a").each(function() {
                if ($(window).width() <= 960)
                    $(this).css("width", "100%");
                else
                    $(this).css("width", "auto");
            });
        }

        function animateRanks(i) {
            setTimeout(function() {
                $("#rank > img").attr('src', '/Images/ranks/' + i + '.png');
                $("#rank > h2:last-of-type").text(i);

                if (i < levels)
                    animateRanks(i+ 1);
            }, 750 / levels);
        }

        function posOptionTabs() {
            let maxOptionHeight = $("#changePwd").outerHeight();
            let emailDiff = maxOptionHeight - $("#changeEmail").outerHeight();
            let imgDiff = maxOptionHeight - $("#changeImg").outerHeight();
            $("#changeEmail > img").css("margin-top", emailDiff / 2);
            $("#changeEmail > h2").css("margin-top", emailDiff / 2 + 20);
            $("#changeImg > img").css("margin-top", imgDiff / 2);
            $("#changeImg > h2").css("margin-top", imgDiff / 2 + 20);
        }

        function posRepBar(animate) {
            var repWidth = $(".info").width() - $("#rank").outerWidth() - 60;
            var xpDoneWidth = (@Model.EXP / 1500) * 100 + '%';
            $("#rep").width(repWidth);

            if (animate)
                $("#xpDone").animate({ width: xpDoneWidth }, 750, "linear");
            else
                $("#xpDone").width(xpDoneWidth);
        }

        function showForm(id) {
            $("#options").append('<form action="/Account/Index" enctype="multipart/form-data" method="post" autocomplete="off"><div id="optionForm"><div class="optionHeader"><img id="' + id + '_headerImg" src="/Images/option_' + id + '.png" /><h2>' + $('#' + id).find("h2").text() + '</h2></div></div></form>');

            if (id == "changeImg") {
                $("#optionForm").append('<img id="UploadedImage" src="' + '@Url.Content(Model.ProfilPic)' + '"><input id="ImageUploader" name="ImageUploader" type="file">');
                $("#optionForm").append('<input id="UploadButton" type="button" value="Choisir une image...">');
            }
            else if (id == "changePwd") {
                $("#optionForm").append('<div><h2>Ancien <grey>mot de passe</grey></h2><input name="oldPwd" type="password"/></div>');
                $("#optionForm").append('<div><h2>Nouveau <grey>mot de passe</grey></h2><input name="newPwd" type="password"/></div>');
                $("#optionForm").append('<div><h2>Confirmer <grey>mot de passe</grey></h2><input name="confirmPwd" type="password"/></div>');
            }
            else {
                $("#optionForm").append('<div><h2>Nouvelle<grey> adresse courriel</grey></h2><input name="newEmail" type="text"/></div>');
                $("#optionForm").append('<div><h2>Confirmer<grey> adresse courriel</grey></h2><input name="confirmEmail" type="text"/></div>');
            }

            $("#options > form").append('<div id="optionSubmit"><input type="submit" value="Confirmer" /><div><img src="/Images/close_red.png" /><h3>Annuler</h3></div><img class="triangle" src="/Images/accountOption_triangle.png" /></div>');
            $('#' + id).hide();

            v_align_margin($("#optionSubmit > input"), $("#optionSubmit"), $("#optionSubmit > input").height());
            h_align($("#optionSubmit > input"), $("#optionSubmit"), $("#optionSubmit > input").outerWidth());
            h_align($("#optionSubmit > div"), $("#optionSubmit"), $("#optionSubmit > div > h3").width() + $("#optionSubmit > div > img").width());
            h_align($(".optionHeader"), $("#optionForm"), $(".optionHeader").width());
        }

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
            
                reader.onload = function (e) {
                    $('#UploadedImage').attr('src', e.target.result);
                }
            
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}