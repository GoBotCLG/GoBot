    // Get cursor position on each mousemove.
    var cursor = { x: -1, y: -1 };
    $(document).mousemove(function (event) {
        cursor.x = event.pageX;
        cursor.y = event.pageY;
    });

    $(document).on("mouseenter", "#navBig > a > div", function (e) {
        // If tab is not active page
        if (!$(this).parent().hasClass("active")) {
            var parent = $(this).parent();

            waterDrop(parent, e); // Add waterdrop effect
            waterDropInterval = setInterval(function () {
                waterDrop(parent, e);
            }, 1000); // Set interval for waterdrop effect

            showNavText($(this)); // Show descriptive text
            var color = $(this).parent().css("background-color");
            var colors = (color.substring(color.indexOf("(") + 1, color.indexOf(")"))).replace(" ", "").split(",");
            for (var i = 0; i < colors.length; i++)
                colors[i] = Math.round(colors[i] * 0.85); // Get background-color (bg *0.85)

            color = "rgb(" + colors.join() + ")";

            $(this).parent().css({ backgroundColor: color }); // Change background-color
        }
    });
    $(document).on("mouseleave", "#navBig > a > div", function (e) {
        if (!$(this).parent().hasClass("active")) {
            clearInterval(waterDropInterval); // Remove waterdrop
            hideNavText($(this)); // Remove text

            $(this).parent().css({ backgroundColor: "#f16651" });
        }
    });

    // Active page
    $("#navBig > a > div").click(function () {
        clearInterval(waterDropInterval); // Remove waterdrop
        $("#navBig").stop(); // Stop animations of nav
        $("#navBig").find(".active").removeClass("active");
        $(this).parent().parent().find("a").css({ backgroundColor: "#f16651" });
        $(this).parent().css({ backgroundColor: "#e3604c" });
        $(this).parent().addClass("active");
        hideNavText($(this)); // Hide text
    });

    function showNavText(elem) {
        if ($(window).width() > mobileWidth) {
            var id = elem.parent().attr("id").substring(0, 1).toUpperCase() + elem.parent().attr("id").substring(1).toLowerCase();
            elem.parent().parent().append("<div id=\"text\"><span>" + id + "</span><div></div></div>");

            var scrollTop = $(window).scrollTop(), elementOffset = elem.offset().top, topPos = (elementOffset - scrollTop);
            topPos += (elem.height() / 2 - $("#text").height() / 2);
            var leftPos = -($("#text").width() + 40);
            $("#text").css({
                top: topPos,
                left: leftPos
            });
        }
    }
    function hideNavText(elem) {
        if ($(window).width() > mobileWidth)
            $("#navBig > #text").remove();
    }

    function toMobile() {

    }

    function toDesktop() {

    }

    function waterDrop(parent, e) {
        if (parent.find(".ink").length == 0)
            parent.prepend("<span class='ink'></span>");

        var ink = parent.find(".ink");
        ink.removeClass("animate");

        var d;
        if (!ink.height() && !ink.width()) {
            d = Math.max(parent.outerWidth(), parent.outerHeight());
            ink.css({ height: d, width: d });
        }

        var x = cursor.x - parent.offset().left - ink.width() / 2;
        var y = cursor.y - parent.offset().top - ink.height() / 2;

        ink.css({ top: y + 'px', left: x + 'px' }).addClass("animate");
    }

    function h_align_window(elem) {
        var pos = ($(window).width() - $("#navBig").width()) / 2 - elem.width() / 2;
        elem.css("left", pos);
    }

    function v_align_window(elem, parent) {
        var pos = $(window).height() / 2 - elem.height() / 2;
        elem.css("top", pos);
    }

    function v_align(e, p, eH) {
        var pos = p.height() / 2 - eH / 2;
        e.css("top", pos > 0 ? pos : 0);
    }

    function v_align_margin(e, p, eH) {
        var pos = p.height() / 2 - eH / 2;
        e.css("margin-top", pos > 0 ? pos : 0);
    }

    function h_align(e, p) {
        var pos = p.width() / 2 - e.width() / 2;
        e.css("left", pos > 0 ? pos : 0);
    }

    function h_align(e, p, eW) {
        var pos = p.width() / 2 - eW / 2;
        e.css("left", pos > 0 ? pos : 0);
    }

    function getHeightOfChilds(e) {
        var totalHeight = 0;

        e.children().each(function () {
             totalHeight += $(this).outerHeight(true);
        });

        return totalHeight;
    }
    </script>

